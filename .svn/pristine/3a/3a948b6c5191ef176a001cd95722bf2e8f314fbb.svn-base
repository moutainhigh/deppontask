            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.depponltsopensource</groupId>
            <artifactId>depponlts-spring</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.depponltsopensource</groupId>
            <artifactId>depponlts-monitor</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mongodb.morphia</groupId>
